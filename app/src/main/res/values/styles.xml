<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PrimaryTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/view_notes_item_title_text_size</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="SecondaryTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/view_notes_item_content_text_size</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PrimaryEditText" parent="DefaultEditText">

    </style>

    <style name="SecondaryEditText" parent="DefaultEditText">

    </style>

    <style name="TimeEditText" parent="DefaultEditText">

    </style>

    <style name="PrimaryColorAccentStyle">
        <item name="colorAccent">@color/colorFab</item>
    </style>

    <style name="PrimaryColorBackButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
